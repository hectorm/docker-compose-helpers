#!/bin/sh

set -eu
export LC_ALL=C

BASE_URL='https://raw.githubusercontent.com/hectorm/docker-compose-helpers/master'
BIN_DIR=/usr/local/bin
SYSTEMDUNIT_DIR=/etc/systemd/system

curl --proto '=https' --tlsv1.2 -L \
	-o "${BIN_DIR:?}/#1-#2" "${BASE_URL:?}/bin/{docker-compose}-{restart,start,stop,upgrade,helpers-upgrade}"

chown root:root "${BIN_DIR:?}"/docker-compose*
chmod 755 "${BIN_DIR:?}"/docker-compose*

if [ -d "${SYSTEMDUNIT_DIR:?}" ]; then
	curl --proto '=https' --tlsv1.2 -L \
		-o "${SYSTEMDUNIT_DIR:?}/#1.#2" "${BASE_URL:?}/systemd/{docker-compose@}.{service}" \
		-o "${SYSTEMDUNIT_DIR:?}/#1.#2" "${BASE_URL:?}/systemd/{docker-compose-upgrade}.{service,timer}" \
		-o "${SYSTEMDUNIT_DIR:?}/#1.#2" "${BASE_URL:?}/systemd/{docker-compose-helpers-upgrade}.{service,timer}"

	chown root:root "${SYSTEMDUNIT_DIR:?}"/docker-compose*
	chmod 644 "${SYSTEMDUNIT_DIR:?}"/docker-compose*

	systemctl daemon-reload 2>/dev/null ||:
fi
