#!/bin/sh

set -eu
export LC_ALL=C

if docker compose version >/dev/null 2>&1; then
	COMPOSE='docker compose'
else
	COMPOSE='docker-compose'
fi

HOST_HOSTNAME="$(uname -n)"
export HOST_HOSTNAME

HOST_VIRTUALIZATION="$(systemd-detect-virt -v ||:)"
export HOST_VIRTUALIZATION

if [ -t 1 ]; then
	${COMPOSE:?} up -d "${@}"
	exec ${COMPOSE:?} logs -f
else
	exec ${COMPOSE:?} up "${@}"
fi
